<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Name</th>
      <th>Price</th>
      <th>Quant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        
        <td>
          <ul>
            <% product.categories.each do |category| %>
              <li><%= category.name %></li>
            <% end %>  
          </ul>
        </td>
        
        <td><%= product.name %></td>
        <td><%= number_to_currency(product.price, precision: 0, unit: 'CLP$', delimiter: '.' ) %></td>
        <td><%= product.quant %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to  "AÃ±adir al carrito", cart_add_path(product.id), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

